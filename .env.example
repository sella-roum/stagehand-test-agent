# .env.example - Copy this to .env and fill in your API keys

# --- Provider Selection ---
# 'google', 'groq', 'openai', or 'cerebras'
LLM_PROVIDER="google"

# --- Google Gemini Settings ---
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY"
# For complex reasoning like planning
GOOGLE_DEFAULT_MODEL="gemini-1.5-pro-latest"
# For faster, simpler tasks
GOOGLE_FAST_MODEL="gemini-1.5-flash-latest"

# --- Groq Cloud Settings ---
GROQ_API_KEY="YOUR_GROQ_API_KEY"
GROQ_DEFAULT_MODEL="llama3-70b-8192"
GROQ_FAST_MODEL="llama3-8b-8192"

# --- OpenAI Settings (includes OpenRouter) ---
# For OpenAI, use "YOUR_OPENAI_API_KEY"
# For OpenRouter, use "YOUR_OPENROUTER_API_KEY"
OPENAI_API_KEY="YOUR_API_KEY"
# For OpenAI, e.g., "gpt-4o"
# For OpenRouter, e.g., "anthropic/claude-3.5-sonnet"
OPENAI_DEFAULT_MODEL="gpt-4o"
OPENAI_FAST_MODEL="gpt-4o-mini"
# For OpenRouter, set this to "https://openrouter.ai/api/v1"
OPENAI_BASE_URL=

# --- Cerebras Settings ---
CEREBRAS_API_KEY="YOUR_CEREBRAS_API_KEY"
CEREBRAS_DEFAULT_MODEL="BTLM-3B-8K-chat"
CEREBRAS_FAST_MODEL="BTLM-3B-8K-chat"

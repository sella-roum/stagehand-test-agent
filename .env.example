# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# 使用するLLMプロバイダを指定します。
# 有効な値: 'google', 'groq', 'openai', 'cerebras'
LLM_PROVIDER=google

# -----------------------------------------------------------------------------
# Google Gemini
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY
# 高性能モデル (シナリオ正規化、自己修復など)
GOOGLE_DEFAULT_MODEL=gemini-2.5-pro
# 高速モデル (Stagehand内部、意図分類など)
GOOGLE_FAST_MODEL=gemini-2.5-flash

# -----------------------------------------------------------------------------
# Groq
# -----------------------------------------------------------------------------
GROQ_API_KEY=YOUR_GROQ_API_KEY
GROQ_DEFAULT_MODEL=llama3-70b-8192
GROQ_FAST_MODEL=llama3-8b-8192

# -----------------------------------------------------------------------------
# OpenAI
# -----------------------------------------------------------------------------
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
# (オプション) OpenAI互換APIのエンドポイント (例: ローカルLLM)
# OPENAI_BASE_URL=http://localhost:1234/v1
# (オプション) OpenAI 組織/プロジェクト指定
# OPENAI_ORG_ID=YOUR_OPENAI_ORG_ID
# OPENAI_PROJECT=YOUR_OPENAI_PROJECT
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_FAST_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Cerebras
# -----------------------------------------------------------------------------
CEREBRAS_API_KEY=YOUR_CEREBRAS_API_KEY
# (オプション) Cerebras Inference API のベースURL（例）
# CEREBRAS_BASE_URL=https://api.cerebras.ai/v1
CEREBRAS_DEFAULT_MODEL=btlm-3b-8k-chat
CEREBRAS_FAST_MODEL=btlm-3b-8k-chat

# -----------------------------------------------------------------------------
# Stagehand Test Agent Configuration
# -----------------------------------------------------------------------------
# (オプション) Playwrightが起動するブラウザのCDPデバッグポートを指定します。
# ポートが競合する場合に変更してください。
# デフォルト: 9222
# STAGEHAND_CDP_PORT=9222
# セキュリティ注意: CDP はローカル専用にし、外部から到達不能にしてください。
# （推奨）バインドは 127.0.0.1 のみ。必要ならリバースプロキシやSSHトンネルを使用。

# (オプション) シナリオ記録モードでのユーザー操作の最大リトライ回数を指定します。
# 単位: 失敗した操作(ツールコール)毎の追加試行回数。0=リトライなし。推奨: 0〜2
# デフォルト: 1
# RECORDER_MAX_RETRIES=1
# RECORDER_MAX_RETRIES=0

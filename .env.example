# .env.example - このファイルを.envにコピーして、APIキーを記入してください

# --- プロバイダ選択 ---
# 'google', 'groq', 'openai', 'cerebras' のいずれかを選択
LLM_PROVIDER="google"

# --- Google Gemini 設定 ---
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY"
# 複雑な思考（計画立案など）に使用する高精度モデル
GOOGLE_DEFAULT_MODEL="gemini-2.5-pro"
# 高速なタスク（ステップ解釈など）に使用するモデル
GOOGLE_FAST_MODEL="gemini-2.5-flash"

# --- Groq Cloud 設定 ---
GROQ_API_KEY="YOUR_GROQ_API_KEY"
GROQ_DEFAULT_MODEL="meta-llama/llama-4-scout-17b-16e-instruct"
GROQ_FAST_MODEL="meta-llama/llama-4-scout-17b-16e-instruct"

# --- OpenAI Settings (includes OpenRouter) ---
# OpenAIの場合は "YOUR_OPENAI_API_KEY"
# OpenRouterの場合は "YOUR_OPENROUTER_API_KEY"
OPENAI_API_KEY="YOUR_API_KEY"
# OpenAIの場合: "gpt-4o" など
# OpenRouterの場合: "anthropic/claude-3.5-sonnet" など
OPENAI_DEFAULT_MODEL="gpt-4o"
OPENAI_FAST_MODEL="gpt-4o-mini"
# OpenRouterを使用する場合のみ設定: "https://openrouter.ai/api/v1"
OPENAI_BASE_URL=

# --- Cerebras 設定 ---
CEREBRAS_API_KEY="YOUR_CEREBRAS_API_KEY"
CEREBRAS_DEFAULT_MODEL="qwen-3-235b-a22b-instruct-2507"
CEREBRAS_FAST_MODEL="qwen-3-235b-a22b-instruct-2507"
